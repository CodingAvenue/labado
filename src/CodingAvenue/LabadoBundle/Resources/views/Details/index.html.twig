<div class="row">  
    <div class="row">
    <div class="row">
    <div class="col s12 m4"><img src="{{ asset('images/Labado.jpg') }}"/></div>
    <div class="col s12 m8">
        <span>
            <h4>{{ laundry_shop.getName() }}</h4>
            <p id="address">{{ laundry_shop.getAddress() }}</p>
            <p id="contact_number">{{ laundry_shop.getContactNumber() }}</p>
        </span>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <span>
            <h5>Rates</h5>
            <ul>
                {% for service in laundry_shop.getServices() %}
                <li>{{ service.type }} - &#8369;{{ service.pricePerKilo }}</li>
                {% endfor %}
            </ul>
        </span>
    </div>
</div>
<div class="row">
    <div class="col s12 m4 l2"></div>
    <div class="col s12 m4 l8"><p class="PButton"><a class="waves-effect waves-light btn blue">Choose</a></p></div>
    <div class="col s12 m4 l2"></div>
</div>
