{% extends "base.html.twig" %}

{% block body %}
    {% block fos_user_content %}
        {% include "@FOSUser/ChangePassword/change_password_content.html.twig" %}
    {% endblock fos_user_content %}
{% endblock %}

{% block javascripts %}
    <script>
        {% if errors %}
            var str = "";
            {% for error in errors %}
                str += "<li>{{error}}</li>";
            {% endfor %}
            $('#form-error-message').css("display","block");
            $('#form-error-message').html(str);
        {% endif %}
    </script>
{% endblock %}