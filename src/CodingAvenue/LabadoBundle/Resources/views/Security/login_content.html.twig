{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    <div class="container row ">
        <div class="col s12 m6 offset-m3  security-container">
            <h5 class="center-align">LOGIN</h5> 
            {% if error %}
                <div id="error-container" class="center-align red white-text">
                    Incorrect Username or Password
                </div>
            ï¿¼{% endif %}
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
                <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
            </div>

            <div class="input-field">
                <i class="material-icons prefix">vpn_key</i>
                <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control"  />
            </div>

            <div>
                <input type="checkbox" id="remember_me" name="_remember_me" class="filled-in" >
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <div class="right ">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-block " />
            </div>
        </div>
    </div>
</form>